<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <!-- wedding.order tree view -->
    <record id="wedding_order_view_tree" model="ir.ui.view">
        <field name="name">wedding.order.view.tree</field>
        <field name="model">wedding.order</field>
        <field name="arch" type="xml">
            <tree>
            <header>
                <button string="Tandai Kembali" name="kembali_barang" type="object" class="oe_highlight"/>
            </header>
            <header>
                <button string="Batalkan Kembali" name="batalkan_kembali" type="object" class=""/>
            </header>
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="pelanggan"/>
                <field name="tanggal_pesan"/>
                <field name="tanggal_kirim"/>
                <field name="orderdetail_ids"/> 
                <field name="pengembalian_barang"/>
                <field name="total" sum="Total Tree"/>               
            </tree>
        </field>
    </record>

    <!-- wedding.order form view -->
    <record id="wedding_order_view_form" model="ir.ui.view">
        <field name="name">wedding.order.view.form</field>
        <field name="model">wedding.order</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="name"/>
                        <field name="pelanggan"/>
                        <field name="tanggal_pesan"/>
                        <field name="tanggal_kirim"/>
                        <field name="total"/>
                        <!-- <field name="orderdetail_ids"/> -->
                    </group>
                    <group>
                        <field name="orderdetail_ids">  
                            <tree editable="bottom">
                                <field name="panggung_id"/>
                                <field name="harga_satuan"/>
                                <field name="qty"/>
                                <field name="harga" sum="Total"/>
                            </tree>
                        </field>
                        <field name="orderdetailtamu_ids">  
                            <tree editable="bottom">
                                <field name="kursitamu_id"/>
                                <field name="harga_satuan_kursi"/>
                                <field name="qty_kursi"/>
                                <field name="harga_kursi" sum="Total"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- wedding.order action window -->
    <record id="wedding_order_action" model="ir.actions.act_window">
        <field name="name">Wedding Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wedding.order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem 
        id="wedding_order_menu_act" 
        name="Order" 
        parent="wedding_order_menu_categ" 
        action="wedding_order_action" 
        sequence="10"/>

</odoo>