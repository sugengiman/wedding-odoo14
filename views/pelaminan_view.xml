<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <!-- wedding.pelaminan tree view #otree-->
    <record id="wedding_pelaminan_view_tree" model="ir.ui.view">
        <field name="name">Pelaminan</field>
        <field name="model">wedding.pelaminan</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="deskripsi"/>
                <field name="harga"/>
            </tree>
        </field>
    </record>

    <!-- wedding.pelaminan form view ###oform-->
    <record id="wedding_pelaminan_view_form" model="ir.ui.view">
        <field name="name">Pelaminan</field>
        <field name="model">wedding.pelaminan</field>
        <field name="arch" type="xml">
            <form string="Daftar Pelaminan">
                <sheet>
                    <group name="data" string="Nama dan Harga">
                        <!-- Add your fields here -->
                        <field name="name"/>
                        <field name="harga"/>
                    </group>
                    <group name="des" string="Deskripsi Tipe Pelaminan">
                        <field name="deskripsi"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- wedding.pelaminan action window ###oact-->
    <record id="wedding_pelaminan_action" model="ir.actions.act_window">
        <field name="name">Pelaminan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wedding.pelaminan</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item must have a parent and an action ###omenua-->
    <menuitem 
        id="wedding_pelaminan_menu_act" 
        name="Pelaminan" 
        parent="wedding_akomodasi_menu_categ" 
        action="wedding_pelaminan_action" 
        sequence="20"/>
</odoo>